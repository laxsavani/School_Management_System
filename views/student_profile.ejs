<%-include('student_header')%>
<style>
  header{
    box-shadow:0px 2px 15px rgba(0, 0, 0, 0.1);
  }
</style>
  <link rel="stylesheet" href="/assets/css/style.css">
  <div class=" mt-5 pt-5 col-12 col-xxl-12 col-xl-12" style="margin-right:210px">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-1">
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="<%=data.image%>" alt="Student_data" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4>
                    <%=data.name%>
                  </h4>
                </div>
              </div>
            </div>
          </div>
          <div class="card">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between py-3 align-items-center flex-wrap">
                <h4>parents info</h4>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                name : <%=data.father_name%>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                mobile no : <%=data.father_phone%>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                qualification : <%=data.edu_qualification_father%>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-2">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">GR ID</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.grid%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.name%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.email%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Mobile</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.phone%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">course</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.cource%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Address</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.address%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Gender</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.gender%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">fees</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.fees%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">paid fees</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.paid_fees%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">pending fees</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.pending_fees%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Batch time</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=data.batch_time%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="assets/vendor/php-email-form/validate.js"></script>


  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>
  <script src="../assets/js/main.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/html2pdf.js/0.9.1/html2pdf.bundle.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.1/html2pdf.bundle.min.js"></script>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<script>
        window.addEventListener('pageshow', (event) => {
  // Check if the page is retrieved from the bfcache
  if (event.persisted && !document.cookie.match(/jwt/)) {
    // Force a reload if the user has logged out
    location.reload();
  }
 });
</script>

  </body>

  </html>